# Configuration environment - ESSIVI Backend
# Copier ce fichier en .env et adapter les valeurs

# ==========================================
# DATABASE CONFIGURATION
# ==========================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=essivi
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DB_POOL_SIZE=5

# ==========================================
# FLASK CONFIGURATION
# ==========================================
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_APP=app.py

# ==========================================
# JWT CONFIGURATION
# ==========================================
# Générer une clé sécurisée: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET_KEY=your_super_secret_key_here_change_in_production
JWT_ACCESS_TOKEN_EXPIRES=3600  # 1 heure en secondes

# ==========================================
# CORS CONFIGURATION
# ==========================================
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080

# ==========================================
# SMTP CONFIGURATION (pour notifications par email)
# ==========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@essivi.com

# ==========================================
# AWS CONFIGURATION (pour stockage photos/documents)
# ==========================================
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=essivi-uploads

# ==========================================
# LOGGING CONFIGURATION
# ==========================================
LOG_LEVEL=INFO
LOG_FILE=logs/essivi.log

# ==========================================
# PAYMENT CONFIGURATION (si applicable)
# ==========================================
STRIPE_SECRET_KEY=sk_test_your_key
STRIPE_PUBLIC_KEY=pk_test_your_key
STRIPE_WEBHOOK_SECRET=whsec_your_secret

# ==========================================
# API CONFIGURATION
# ==========================================
API_HOST=0.0.0.0
API_PORT=5000
API_VERSION=1.0
API_TITLE=ESSIVI Water Distribution API

# ==========================================
# FEATURES FLAGS
# ==========================================
ENABLE_PAYMENT=False
ENABLE_NOTIFICATIONS=True
ENABLE_GPS_TRACKING=True
ENABLE_PHOTO_UPLOAD=True

# ==========================================
# THIRD PARTY SERVICES
# ==========================================
# Google Maps API
GOOGLE_MAPS_API_KEY=your_google_maps_key

# Mapbox API
MAPBOX_ACCESS_TOKEN=your_mapbox_token

# ==========================================
# MAINTENANCE
# ==========================================
MAINTENANCE_MODE=False
SCHEDULED_MAINTENANCE_TIME=00:00  # Format HH:MM UTC
